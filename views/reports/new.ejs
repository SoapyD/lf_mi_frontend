<%- include("../partials/header") %>

<div class="container">
	
	<h1 style="text-align:center;">
		Create a New Report
	</h1>

	<div class="row">
		
		<div style="width:30%; margin:30px auto; ">			
			<form action="/reports" method="POST">
				<div class="form-group">
					<p>Report Name:</p>
					<input class="form-control" type="text" name="params[name]" placeholder="name">
				</div>
				<div class="form-group">	
					<p>Description:</p>				
					<textarea rows="6" cols="47" name="params[description]" placeholder="description" class="max-width"></textarea>
				</div>
				<div class="form-group">					
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>						
				</div>				

			</form>
			<a href="/reports">Go Back</a>
		</div>
		
	</div>
	
</div>


<%- include("../partials/footer") %>